generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Applicant {
  id                  String   @id @default(cuid())
  fullName            String
  nin                 String   @unique
  bvn                 String   @unique
  residentialAddress  String
  email               String   @unique
  phone               String
  status              String   @default("pending")
  estimatedCompletion DateTime
  createdAt           DateTime @default(now())
}
